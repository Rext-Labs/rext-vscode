{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rext",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#variables" },
    { "include": "#method_url" },
    { "include": "#headers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.rext",
          "begin": "/\\*\\*",
          "end": "\\*/",
          "patterns": [{ "include": "#directives" }]
        },
        { "name": "comment.line.number-sign.rext", "match": "#.*$" },
        { "name": "comment.line.separator.rext", "match": "^\\s*---\\s*$" }
      ]
    },
    "directives": {
      "patterns": [
        {
          "match": "^@config$",
          "name": "keyword.control.config.rext"
        },
        {
          "match": "^\\s*(baseUrl|collection|timeout|retries|headers|assert):\\s*(.*)",
          "captures": {
            "1": { "name": "support.type.property-name.rext" },
            "2": { "name": "string.unquoted.value.rext" }
          }
        },
        {
          "match": "@name\\s+(.+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "string.unquoted.name.rext" }
          }
        },
        {
          "match": "@pre\\s+([a-zA-Z0-9]{6})",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "constant.other.reference.rext" }
          }
        },
        {
          "match": "@header\\s+([^:]+):\\s*(.+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "entity.name.tag.rext" },
            "2": { "name": "string.unquoted.rext" }
          }
        },
        {
          "match": "@retry\\s+(\\d+)(?:\\s+delay\\s+(\\d+))?",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "constant.numeric.rext" },
            "2": { "name": "constant.numeric.rext" }
          }
        },
        {
          "match": "@timeout\\s+(\\d+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "constant.numeric.rext" }
          }
        },
        {
          "match": "@capture\\s+(global|env|collection)\\.(\\w+)\\s*=\\s*(.+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "entity.name.tag.rext" },
            "2": { "name": "variable.other.rext" },
            "3": { "name": "string.unquoted.rext" }
          }
        },
        {
          "name": "keyword.control.rext",
          "match": "@capture\\s+(\\w+)",
          "captures": { "1": { "name": "variable.other.rext" } }
        },
        {
          "name": "keyword.control.rext",
          "match": "@assert\\s+(\\w+)",
          "captures": { "1": { "name": "variable.other.rext" } }
        },
        {
          "match": "@id\\s+([a-zA-Z0-9]{6})",
          "captures": {
            "0": { "name": "comment.line.rext" },
            "1": { "name": "comment.line.rext" }
          }
        },
        {
          "match": "\\*?\\s*@collection\\s+(.+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "string.unquoted.name.rext" }
          }
        },
        {
          "match": "@group\\s+(.+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "string.unquoted.name.rext" }
          }
        },
        {
          "match": "\\*?\\s*@tags\\s+(.+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "entity.name.tag.rext" }
          }
        },
        {
          "name": "keyword.deprecated.rext",
          "match": "@deprecated"
        },
        {
          "match": "@form\\s+(\\S+)\\s*=\\s*@file\\s+(\\S+)(?:\\s+(\\S+))?",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "variable.other.rext" },
            "2": { "name": "string.unquoted.rext" },
            "3": { "name": "support.type.property-name.rext" }
          }
        },
        {
          "match": "@form\\s+(\\S+)\\s*=\\s*(.+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "variable.other.rext" },
            "2": { "name": "string.unquoted.rext" }
          }
        },
        {
          "match": "@body\\s+(.+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "string.unquoted.rext" }
          }
        },
        {
          "match": "@query\\\\s+(\\\\S+)\\\\s*=\\\\s*(.+)",
          "captures": {
            "0": { "name": "keyword.control.rext" },
            "1": { "name": "variable.other.rext" },
            "2": { "name": "string.unquoted.rext" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        { "name": "variable.interpolation.rext", "match": "\\{\\{(\\w+)\\}\\}" }
      ]
    },
    "method_url": {
      "patterns": [
        {
          "match": "^(GET|POST|PUT|DELETE|PATCH|HEAD|OPTIONS)\\s+(\\S+)",
          "captures": {
            "1": { "name": "keyword.other.unit.rext" },
            "2": { "name": "string.underline.rext" }
          }
        }
      ]
    },
    "headers": {
      "patterns": [
        {
          "match": "^([\\w-]+):\\s*(.*)$",
          "captures": {
            "1": { "name": "support.type.property-name.rext" },
            "2": { "name": "string.unquoted.rext" }
          }
        }
      ]
    }
  },
  "scopeName": "source.rext"
}
