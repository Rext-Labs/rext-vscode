{
  "name": "rext",
  "displayName": "Rext",
  "publisher": "rext-labs",
  "description": "Smart-HTTP Client for VS Code",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "resources/icon.png",
  "activationEvents": [
    "onLanguage:rext",
    "onView:rext-sidebar-view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rext.runCurrentFile",
        "title": "Rext: Run Current Request"
      },
      {
        "command": "rext.runAll",
        "title": "Rext: Run All Requests in File"
      },
      {
        "command": "rext.switchEnvironment",
        "title": "Rext: Switch Environment"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rext-sidebar",
          "title": "Rext",
          "icon": "./resources/rext-icon.svg"
        }
      ]
    },
    "views": {
      "rext-sidebar": [
        {
          "type": "webview",
          "id": "rext-sidebar-view",
          "name": "Rext",
          "icon": "./resources/rext-icon.svg"
        }
      ]
    },
    "languages": [
      {
        "id": "rext",
        "aliases": [
          "Rext",
          "rext"
        ],
        "extensions": [
          ".rext"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rext",
        "scopeName": "source.rext",
        "path": "./syntaxes/rext.tmLanguage.json"
      }
    ],
    "codeLens": [
      {
        "command": "rext.runCurrentFile",
        "title": "Run Rext"
      }
    ],
    "keybindings": [
      {
        "command": "rext.runCurrentFile",
        "key": "ctrl+enter",
        "when": "editorLangId == rext"
      }
    ],
    "snippets": [
      {
        "language": "rext",
        "path": "./snippets/rext.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:webview && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "cd webview-ui && npm run build",
    "watch:webview": "cd webview-ui && npm run watch",
    "watch:all": "npm run watch & npm run watch:webview",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "axios": "^1.13.5"
  }
}
